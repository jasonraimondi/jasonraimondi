{
  "name": "@jmondi/webpack-starter",
  "description": "Typescript Webpack Starter Pack",
  "scripts": {
    "clean": "rm -rf ../jekyll/assets/*",
    "dev": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json webpack --watch --config build/webpack.conf.ts",
    "prod": "run-s clean build:prod",
    "build:prod": "cross-env TS_NODE_PROJECT=tsconfig.webpack.json NODE_ENV=production webpack --config build/webpack.conf.ts",
    "pretty": "prettier --write src/**/*.ts src/**/*.scss",
    "jekyll": "cd ../jekyll && bundle exec jekyll serve",
    "serve": "run-p dev jekyll"
  },
  "dependencies": {
    "vue": "^2.5.17"
  },
  "devDependencies": {
    "@types/node": "^10.7.1",
    "@types/webpack": "^4.4.10",
    "cross-env": "^5.2.0",
    "css-loader": "^0.28.11",
    "file-loader": "^1.1.11",
    "mini-css-extract-plugin": "^0.4.1",
    "normalize.css": "^8.0.0",
    "npm-run-all": "^4.1.3",
    "optimize-css-assets-webpack-plugin": "^4.0.3",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^12.0.0",
    "postcss-loader": "^2.1.6",
    "ts-loader": "^4.5.0",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "vue-loader": "^15.3.0",
    "vue-template-compiler": "^2.5.17",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "parser": "typescript"
  }
}
