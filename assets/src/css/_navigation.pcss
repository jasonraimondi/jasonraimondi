.navigation {
  display: none;
//justify-content: center;
  align-items: center;
  background-color: var(--purple);
  width: 100%;
  height: 75px;

  @media (--large) {
    display: flex;
    margin-left: var(--sidebar-width);
  }
}

.sidebar-is-open .navigation {
  margin-left: var(--sidebar-width);
}

.mobile-nav {
  padding: 0.5rem 0;

  @media (--large) {
    display: none;
  }
}
